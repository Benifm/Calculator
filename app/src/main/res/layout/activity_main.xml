<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.calculator.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/Calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calc"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button2"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="2"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="0dp"
        app:layout_constraintRight_toLeftOf="@+id/button3"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="3"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/button2"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/Calc" />

    <Button
        android:id="@+id/button4"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="4"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="5"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toLeftOf="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="6"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintTop_toTopOf="@+id/button5"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button3" />

    <Button
        android:id="@+id/button7"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="7"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="8"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/add"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/button9"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toRightOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="9"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/dev"
        app:layout_constraintTop_toTopOf="@+id/button8"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button6" />

    <Button
        android:id="@+id/button0"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="0"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/add"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/button0"
        android:layout_marginTop="-6dp" />

    <Button
        android:id="@+id/mul"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="69dp"
        android:text="*"
        app:layout_constraintLeft_toRightOf="@+id/sub"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/sub"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/AC"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="AC"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/second"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Calc"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/Calc" />

    <Button
        android:id="@+id/sub"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@+id/add"
        android:layout_marginLeft="22dp"
        app:layout_constraintTop_toTopOf="@+id/add"
        android:layout_marginTop="-6dp" />

    <Button
        android:id="@+id/dev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toRightOf="@+id/mul"
        android:layout_marginLeft="17dp" />

    <TextView
        android:id="@+id/first"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:text="0"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/second"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/second"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:text="0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/first"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/AC"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/operator"
        android:layout_width="58dp"
        android:layout_height="21dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/second"
        android:layout_marginLeft="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="223dp"
        android:layout_height="90dp"
        android:text="0"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/operator"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.489"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Calc"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="1.0" />
</android.support.constraint.ConstraintLayout>
