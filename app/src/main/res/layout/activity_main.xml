<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.calculator.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/Calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calc"
        tools:layout_editor_absoluteY="179dp"
        tools:layout_editor_absoluteX="288dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/button2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="4"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="7"
        android:layout_marginStart="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button8"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        android:layout_marginLeft="-10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9" />

    <Button
        android:id="@+id/button9"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7" />

    <Button
        android:id="@+id/button0"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="0"
        android:layout_marginStart="16dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/add"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/mul"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="69dp"
        android:text="*"
        app:layout_constraintLeft_toRightOf="@+id/sub"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/sub" />

    <Button
        android:id="@+id/AC"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="AC"
        tools:layout_editor_absoluteY="90dp"
        tools:layout_editor_absoluteX="292dp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@+id/add"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/add" />

    <Button
        android:id="@+id/dev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/mul"
        app:layout_constraintLeft_toRightOf="@+id/mul"
        android:layout_marginLeft="-66dp" />

    <TextView
        android:id="@+id/first"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:text="0"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/second"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/first"
        android:layout_marginLeft="49dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/first" />

    <TextView
        android:id="@+id/operator"
        android:layout_width="58dp"
        android:layout_height="21dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        tools:layout_editor_absoluteX="163dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/second" />

    <TextView
        android:id="@+id/result"
        android:layout_width="223dp"
        android:layout_height="90dp"
        android:text="0"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        tools:layout_editor_absoluteX="65dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/operator" />
</android.support.constraint.ConstraintLayout>
